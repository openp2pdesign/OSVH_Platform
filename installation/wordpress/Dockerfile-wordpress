FROM wordpress:latest

RUN apt update && \
    apt upgrade -y && \
    apt autoremove && \
    apt install -y \
    vim \
    wget \
    unzip


COPY wp-content/plugins/really-simple-ssl /var/www/html/wp-content/plugins/really-simple-ssl

COPY ./config/uploads.ini /usr/local/etc/php/conf.d/uploads.ini
